{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist", // Compiled JavaScript output directory
    "rootDir": "./src", // Location of your TypeScript source files
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "index.ts"], // Include source files and entry point
  "exclude": ["node_modules", "dist"]    // Exclude built files and dependencies
}
